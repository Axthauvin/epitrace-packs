{
  "manifest_version": 3,
  "name": "EPITRACE Packs",
  "version": "1.0",
  "description": "Open your traces with a FIFA-style packs with an animation!",
  "content_scripts": [
    {
      "matches": ["*://intra.forge.epita.fr/*"],
      "js": ["ts-particules.js", "utils.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "img/extension_icon.png",
    "32": "img/extension_icon.png",
    "48": "img/extension_icon.png",
    "128": "img/extension_icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["img/*"],
      "matches": ["*://intra.forge.epita.fr/*"]
    }
  ],
  "permissions": ["storage"],
  "host_permissions": ["*://intra.forge.epita.fr/*"]
}
